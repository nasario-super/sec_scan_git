# =============================================================================
# GitHub Security Scanner - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=gss
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=gss_db

# =============================================================================
# Authentication & Security
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
GSS_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Enable/disable API authentication (set to 'true' in production)
GSS_AUTH_ENABLED=false

# Default admin credentials (change in production!)
GSS_ADMIN_USER=admin
GSS_ADMIN_PASS=admin

# =============================================================================
# GitHub Authentication
# =============================================================================
# Option 1: Personal Access Token (PAT)
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=

# Option 2: GitHub App (recommended for organizations)
# Create at: https://github.com/settings/apps
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_INSTALLATION_ID=

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for API access (comma-separated)
GSS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_CONCURRENCY=4
SCAN_TIMEOUT=3600

# =============================================================================
# Monitoring (Optional - only needed if using monitoring profile)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here
